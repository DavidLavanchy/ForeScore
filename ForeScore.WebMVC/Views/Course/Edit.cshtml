        <table>
            <tr>
                <th>
                    Hole
                </th>
                @for (int i = 1; i < 19; i++)
                {
                    <th>
                        @Html.Label(i.ToString(), new { htmlAttributes = new { @class = "form-control", } })
                    </th>
                }
            </tr>
            <tr>
                <th>
                    Par
                </th>
                @for (int i = 0; i < Model.Holes.Count; i++)
