@model IEnumerable<ForeScore.Models.CourseModels.CourseListItem>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2>Your Courses</h2>
    <br />
    <div class="row">
        <div class="col-lg-12">
            <a href="/Course/Create" class="btn btn-success btn-block">
                Add A New Course
            </a>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading"> Courses</div>
                <div class="panel-body panel-primary">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th class="indexhead">
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th class="indexhead">
                                    @Html.DisplayNameFor(model => model.Slope)
                                </th>
                                <th class="indexhead">
                                    @Html.DisplayNameFor(model => model.Rating)
                                </th>
                                <th class="indexhead">
                                    @Html.DisplayNameFor(model => model.Par)
                                </th>
                                <th class="indexhead">
                                    @Html.DisplayNameFor(model => model.City)
                                </th>
                                <th class="indexhead">
                                    @Html.DisplayNameFor(model => model.StateOfResidence)
                                </th>
                                <th class="indexhead"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="index">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td class="index">
                                        @Html.DisplayFor(modelItem => item.Slope)
                                    </td>
                                    <td class="index">
                                        @Html.DisplayFor(modelItem => item.Rating)
                                    </td>
                                    <td class="index">
                                        @Html.DisplayFor(modelItem => item.Par)
                                    </td>
                                    <td class="index">
                                        @Html.DisplayFor(modelItem => item.City)
                                    </td>
                                    <td class="index">
                                        @Html.DisplayFor(modelItem => item.StateOfResidence)
                                    </td>

                                    <td class="index">
                                        <a href="@Url.Action("Details", "Course", new { id = item.CourseId})"
                                           class="btn btn-block btn-warning">
                                            Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

