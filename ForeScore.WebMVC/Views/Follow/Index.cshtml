@model ForeScore.Models.ViewModels.FollowViewModel

@{
    ViewBag.Title = "Index";
}


<div class="container">
    <h2>Social Index</h2>
    <div class="panel-heading">
        <a href="/Follow/Create" class="btn btn-primary btn-block">
            Create New Follow
        </a>
    </div>

    <div class="row">

        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">Users You Are Following</div>
                <div class="panel-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Following.Count; i++)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => model.Following[i].FullName)</td>
                                    <td>@Html.DisplayFor(model => model.Following[i].Email)</td>
                                    <td>@Html.HiddenFor(model => model.Following[i].UserId)</td>
                                    <td>@Html.ActionLink("Delete", "Delete", new { id = Model.Following[i].FollowingId }) |</td>
                                    <td>@Html.ActionLink("View Profile", "ProfileView", new { id = Model.Following[i].UserId })</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">Your Followers</div>
                <div class="panel-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Followers.Count; i++)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => model.Followers[i].FullName)</td>
                                    <td>@Html.DisplayFor(model => model.Followers[i].Email)</td>
                                    <td>@Html.HiddenFor(model => model.Followers[i].UserId)</td>
                                    <td>
                                        @Html.ActionLink("View Profile", "ProfileView", new { id = Model.Followers[i].UserId }) |
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

