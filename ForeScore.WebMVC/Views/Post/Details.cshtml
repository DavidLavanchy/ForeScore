@model ForeScore.Models.PostModels.PostDetail

@{
    ViewBag.Title = "Details";
}


<div class="container">
    <h2>Post Details</h2>
    <br />
    <div class="row">

        <div class="col-lg-3">
            <a href="@Url.Action("Index", "Post")"
               class="btn btn-block btn-info">
                Post Index
            </a>
        </div>


        <div class="col-lg-3">
            <a href="@Url.Action("Details", "Course", new { id = Model.RoundDetail.CourseDetail.CourseId })"
               class="btn btn-block btn-success">
                @(String.Format("View {0}'s Information", Model.RoundDetail.CourseDetail.Name))
            </a>
        </div>


        <div class="col-lg-3">
            <a href="@Url.Action("Edit", "Post", new { id = Model.PostId})"
               class="btn btn-block btn-warning">
                Edit Post
            </a>
        </div>


        <div class="col-lg-3">
            <a href="@Url.Action("Delete", "Post", new { id = Model.PostId })"
               class="btn btn-block btn-danger">
                Delete Post
            </a>
        </div>


    </div>
    <br />
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">Post Information</div>
                <div class="panel-body form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    @if (Model.RoundId != null)
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.RoundDetail.Score, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.RoundDetail.Score, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>

    <br />

    @Html.HiddenFor(model => model.RoundId)
    @Html.HiddenFor(model => model.RoundDetail.CourseId)

    @if (Model.RoundId != null)
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">Course Information</div>
                    <div class="panel-body panel-primary">
                        <div class="col-lg-6">
                            <dl class="dl-horizontal">

                                @Html.HiddenFor(model => model.RoundDetail.CourseDetail.CourseId)
                                @Html.HiddenFor(model => model.RoundDetail.CourseDetail.CourseId)

                                <dt>
                                    Course Name:
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.RoundDetail.CourseDetail.Name)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.RoundDetail.CourseDetail.Par):
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.RoundDetail.CourseDetail.Par)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.RoundDetail.CourseDetail.Slope):
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.RoundDetail.CourseDetail.Slope)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.RoundDetail.CourseDetail.Rating):
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.RoundDetail.CourseDetail.Rating)
                                </dd>
                            </dl>
                        </div>
                        <div class="col-lg-6">
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.RoundDetail.CourseDetail.Address):
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.RoundDetail.CourseDetail.Address)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.RoundDetail.CourseDetail.City):
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.RoundDetail.CourseDetail.City)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.RoundDetail.CourseDetail.StateOfResidence):
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.RoundDetail.CourseDetail.StateOfResidence)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.RoundDetail.CourseDetail.ZipCode):
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.RoundDetail.CourseDetail.ZipCode)
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">Front Nine</div>
                    <div class="panel-body panel-primary">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th class="hole" scope="col">
                                        Hole
                                    </th>
                                    @for (int i = 0; i < Model.RoundDetail.CourseDetail.FrontNine.Count; i++)
                                    {
                                        <th>
                                            @Html.DisplayFor(model => Model.RoundDetail.CourseDetail.FrontNine[i].HoleNumber, new { htmlAttributes = new { @class = "form-control", } })
                                            @Html.HiddenFor(model => Model.RoundDetail.CourseDetail.FrontNine[i].HoleNumber, new { htmlAttributes = new { @class = "form-control", } })
                                        </th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th class="par" scope="col">
                                        Par
                                    </th>
                                    @for (int i = 0; i < Model.RoundDetail.CourseDetail.FrontNine.Count; i++)
                                    {
                                        <td>
                                            @Html.DisplayFor(model => Model.RoundDetail.CourseDetail.FrontNine[i].Par, new { htmlAttributes = new { @class = "form-control", } })
                                            @Html.HiddenFor(model => Model.RoundDetail.CourseDetail.FrontNine[i].Par, new { htmlAttributes = new { @class = "form-control", } })
                                        </td>
                                    }
                                </tr>

                                <tr>
                                    <th class="distance" scope="col">
                                        Distance (Yards)
                                    </th>
                                    @for (int i = 0; i < Model.RoundDetail.CourseDetail.FrontNine.Count; i++)
                                    {
                                        <td>
                                            @Html.DisplayFor(model => Model.RoundDetail.CourseDetail.FrontNine[i].Distance, new { htmlAttributes = new { @class = "form-control", } })
                                            @Html.HiddenFor(model => Model.RoundDetail.CourseDetail.FrontNine[i].HoleNumber, new { htmlAttributes = new { @class = "form-control", } })
                                        </td>
                                    }
                                </tr>
                                <tr>
                                    <td>
                                        Score
                                    </td>
                                    @for (int i = 0; i < Model.RoundDetail.FrontNine.Count; i++)
                                    {

                                        <td>
                                            @Html.DisplayFor(model => Model.RoundDetail.FrontNine[i].Score, new { @class = "textboxform-control" })
                                            @Html.HiddenFor(model => Model.RoundDetail.FrontNine[i].HoleNumber, new { htmlAttributes = new { @class = "form-control", } })
                                        </td>

                                    }
                                </tr>
                                <tr>
                                    <td>
                                        Driving Distance (Yards)
                                    </td>
                                    @for (int i = 0; i < Model.RoundDetail.FrontNine.Count; i++)
                                    {

                                        <td>
                                            @Html.DisplayFor(model => Model.RoundDetail.FrontNine[i].DrivingDistance, new { @class = "textboxform-control" })
                                        </td>

                                    }
                                </tr>
                                <tr>
                                    <td>
                                        Putts
                                    </td>
                                    @for (int i = 0; i < Model.RoundDetail.FrontNine.Count; i++)
                                    {

                                        <td>
                                            @Html.DisplayFor(model => Model.RoundDetail.FrontNine[i].Putts, new { @class = "textboxform-control" })
                                        </td>

                                    }
                                </tr>
                                <tr>
                                    <td>
                                        Fairway Hit
                                    </td>
                                    @for (int i = 0; i < Model.RoundDetail.FrontNine.Count; i++)
                                    {
                                        <td>
                                            @if (Model.RoundDetail.FrontNine[i].FairwayHit == true)
                                            {
                                                <span class="green glyphicon glyphicon-ok"></span>
                                            }
                                            @if (Model.RoundDetail.FrontNine[i].FairwayHit == false)
                                            {
                                                <span class="red glyphicon glyphicon-remove"></span>
                                            }
                                        </td>
                                    }
                                </tr>
                                <tr>
                                    <td>
                                        Penalty(s)
                                    </td>
                                    @for (int i = 0; i < Model.RoundDetail.FrontNine.Count; i++)
                                    {
                                        <td>
                                            @if (Model.RoundDetail.FrontNine[i].Penalty == true)
                                            {
                                                <span class="green glyphicon glyphicon-ok"></span>
                                            }
                                            @if (Model.RoundDetail.FrontNine[i].Penalty == false)
                                            {
                                                <span class="red glyphicon glyphicon-remove"></span>
                                            }
                                        </td>
                                    }
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">Back Nine</div>
                    <div class="panel-body panel-primary">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th class="hole" scope="col">
                                        Hole
                                    </th>
                                    @for (int i = 0; i < Model.RoundDetail.CourseDetail.BackNine.Count; i++)
                                    {
                                        <th>
                                            @Html.DisplayFor(model => Model.RoundDetail.CourseDetail.BackNine[i].HoleNumber, new { htmlAttributes = new { @class = "form-control", } })
                                            @Html.HiddenFor(model => Model.RoundDetail.CourseDetail.BackNine[i].HoleNumber, new { htmlAttributes = new { @class = "form-control", } })
                                        </th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th class="par" scope="col">
                                        Par
                                    </th>
                                    @for (int i = 0; i < Model.RoundDetail.CourseDetail.BackNine.Count; i++)
                                    {
                                        <td>
                                            @Html.DisplayFor(model => Model.RoundDetail.CourseDetail.BackNine[i].Par, new { htmlAttributes = new { @class = "form-control", } })
                                            @Html.HiddenFor(model => Model.RoundDetail.CourseDetail.BackNine[i].Par, new { htmlAttributes = new { @class = "form-control", } })
                                        </td>
                                    }
                                </tr>

                                <tr>
                                    <th class="distance" scope="col">
                                        Distance (Yards)
                                    </th>
                                    @for (int i = 0; i < Model.RoundDetail.CourseDetail.BackNine.Count; i++)
                                    {
                                        <td>
                                            @Html.DisplayFor(model => Model.RoundDetail.CourseDetail.BackNine[i].Distance, new { htmlAttributes = new { @class = "form-control", } })
                                            @Html.HiddenFor(model => Model.RoundDetail.CourseDetail.BackNine[i].Distance, new { htmlAttributes = new { @class = "form-control", } })
                                        </td>
                                    }
                                </tr>
                                <tr>
                                    <td>
                                        Score
                                    </td>
                                    @for (int i = 0; i < Model.RoundDetail.BackNine.Count; i++)
                                    {

                                        <td>
                                            @Html.DisplayFor(model => Model.RoundDetail.BackNine[i].Score, new { @class = "textboxform-control" })
                                            @Html.HiddenFor(model => Model.RoundDetail.BackNine[i].HoleNumber, new { htmlAttributes = new { @class = "form-control", } })
                                        </td>

                                    }
                                </tr>
                                <tr>
                                    <td>
                                        Driving Distance (Yards)
                                    </td>
                                    @for (int i = 0; i < Model.RoundDetail.BackNine.Count; i++)
                                    {

                                        <td>
                                            @Html.DisplayFor(model => Model.RoundDetail.BackNine[i].DrivingDistance, new { @class = "textboxform-control" })
                                        </td>

                                    }
                                </tr>
                                <tr>
                                    <td>
                                        Putts
                                    </td>
                                    @for (int i = 0; i < Model.RoundDetail.BackNine.Count; i++)
                                    {

                                        <td>
                                            @Html.DisplayFor(model => Model.RoundDetail.BackNine[i].Putts, new { @class = "textboxform-control" })
                                        </td>

                                    }
                                </tr>
                                <tr>
                                    <td>
                                        Fairway Hit
                                    </td>
                                    @for (int i = 0; i < Model.RoundDetail.BackNine.Count; i++)
                                    {
                                        <td>
                                            @if (Model.RoundDetail.BackNine[i].FairwayHit == true)
                                            {
                                                <span class="green glyphicon glyphicon-ok"></span>
                                            }
                                            @if (Model.RoundDetail.BackNine[i].FairwayHit == false)
                                            {
                                                <span class="red glyphicon glyphicon-remove"></span>
                                            }
                                        </td>
                                    }
                                </tr>
                                <tr>
                                    <td>
                                        Penalty(s)
                                    </td>
                                    @for (int i = 0; i < Model.RoundDetail.BackNine.Count; i++)
                                    {
                                        <td>
                                            @if (Model.RoundDetail.BackNine[i].Penalty == true)
                                            {
                                                <span class="green glyphicon glyphicon-ok"></span>
                                            }
                                            @if (Model.RoundDetail.BackNine[i].Penalty == false)
                                            {
                                                <span class="red glyphicon glyphicon-remove"></span>
                                            }
                                        </td>
                                    }
                                </tr>
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
    <br />
    <div class="row">
        <div class="col-lg-12">
            <a href="@Url.Action("Comment", "Post", new { id = Model.PostId})"
               class="btn btn-block btn-success">
                Comment on Your Post
            </a>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">Comments</div>
                <div class="panel-body panel-primary">
                    @foreach (var comment in Model.Comments)
                    {
                        <div class="col-lg-1"></div>
                        <div class="col-lg-10">
                            <div class="panel panel-primary">
                                <div class="panel-heading">@(String.Format("{0}", comment.Name))</div>

                                <div class="panel-body">
                                    <table class="table">
                                        <tr>
                                            <td>@Html.DisplayFor(model => comment.Content, new { htmlAttributes = new { @class = "form-control", } })</td>
                                            @if (comment.OwnerId == Model.OwnerId)
                                            {
                                                <td>
                                                    @Html.ActionLink("Delete Comment", "CommentDelete", new { id = comment.CommentId })
                                                </td>
                                            }
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-1"></div>
                    }
                </div>
            </div>

        </div>
    </div>

</div>

