@model ForeScore.Models.ViewModels.PostsViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Post Index</h2>

<p>
    @Html.ActionLink("Create New", "SelectRound")
</p>
<div class="container">
    <div class="row">

        <div class="col-lg-6">
            <div class="panel panel-primary">
                <div class="panel-heading">Your Feed</div>
                <div class="panel-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Name</th>
                                <th>Content</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.UsersFollowingPosts.Count; i++)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => model.UsersFollowingPosts[i].Title)</td>
                                    <td>@Html.DisplayFor(model => model.UsersFollowingPosts[i].Name)</td>
                                    <td>@Html.DisplayFor(model => model.UsersFollowingPosts[i].Content)</td>
                                    <td>@Html.ActionLink("View Post", "Comment", new { id = Model.UsersFollowingPosts[i].PostId }) |</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


        <div class="col-lg-6">
            <div class="panel panel-primary">
                <div class="panel-heading">Your Posts</div>
                <div class="panel-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Content</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.MyPosts.Count; i++)
                            {
                            <tr>
                                <td>@Html.DisplayFor(model => model.MyPosts[i].Title)</td>
                                <td>@Html.DisplayFor(model => model.MyPosts[i].Content)</td>
                                <td>@Html.ActionLink("Manage Post", "Details", new { id = Model.MyPosts[i].PostId }) |</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

