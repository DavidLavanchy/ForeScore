@model ForeScore.Models.ViewModels.PostCreateViewModel

@{
    ViewBag.Title = "SelectRound";
}


<div class="container">

    <h2>Select A Round To Post</h2>
    <br />

    <div class="row">


        <div class="col-lg-5">
            <a href="@Url.Action("Index", "Post")"
               class="btn btn-block btn-info">
                Post Index
            </a>
        </div>


        <div class="col-lg-2"></div>

        <div class="col-lg-5">
            <a href="@Url.Action("Index", "Round")"
               class="btn btn-block btn-warning">
                Round Index
            </a>
        </div>


    </div>
    <br />
    <h5 id="postselect">Your Round Must Be Set To "Is Public", In Order To Be Able To Post It.</h5>
    <br />
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">Your Public Rounds</div>
                <div class="panel-body panel-primary ">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th scope="row">
                                    Course Name
                                </th>
                                <th scope="row">
                                    Description
                                </th>
                                <th scope="row">
                                    Score
                                </th>
                                <th scope="row">
                                    Is Featured
                                </th>
                                <th scope="row">
                                    Date of Round
                                </th>
                                <th scope="row"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Rounds)
                            {
                                <tr>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.CourseName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Score)
                                    </td>
                                    <td>
                                        @if (item.IsFeatured == true)
                                        {
                                            <span class="green glyphicon glyphicon-ok"></span>
                                        }
                                        @if (item.IsFeatured == false)
                                        {
                                            <span class="red glyphicon glyphicon-remove"></span>
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateOfRound)
                                    </td>

                                    <td>
                                        <a href="@Url.Action("CreatePost", "Post", new { id = item.RoundId})"
                                           class="btn btn-block btn-success">
                                            Post This Round
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

