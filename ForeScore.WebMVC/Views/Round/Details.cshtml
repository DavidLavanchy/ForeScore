                                        @Html.DisplayFor(model => Model.BackNine[i].Penalty, new { htmlAttributes = new { @class = "form-control", } })
                                    </td>
                                }
                            </tr>
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
        <br />

        <div class="row">

            <div class="panel panel-primary col-lg-12">
                <div class="panel panel-heading">Round Information</div>
                <div class="panel-body form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.IsPublic, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.IsPublic, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.IsFeatured, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.IsFeatured, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DateOfRound, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.DateOfRound, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>


                </div>
            </div>
        </div>


        <br />
        <div class="row">
            <div class="col-lg-5">
                <a href="@Url.Action("Index", "Course")"
                   id="sample_editable_1_new"
                   class="btn btn-block btn-info col-lg-2">
                    Round Index
                </a>
            </div>
            <div class=" col-lg-2"></div>
            <div class="col-lg-5">
                <a href="@Url.Action("Edit", "Round", new { id = Model.RoundId })"
                   class="btn btn-block btn-warning col-lg-2">
                    Edit Round
                </a>
            </div>
        </div>
    </div>

</div>


