@model IEnumerable<ForeScore.Models.RoundModels.RoundListItem>

@{
    ViewBag.Title = "Index";
}

<div class="container">

    <h2>Your Rounds</h2>

    <div class="panel-heading col-lg-6">
        <a href="/Round/Create" class="btn btn-primary btn-block">
            Add A New Round
        </a>
    </div>


    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Courses</div>
                <div class="panel-body panel-default">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th class="indexhead">
                                    @Html.DisplayNameFor(model => model.CourseName)
                                </th>
                                <th class="indexhead">
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th class="indexhead">
                                    @Html.DisplayNameFor(model => model.Score)
                                </th>
                                <th class="indexhead">
                                    @Html.DisplayNameFor(model => model.IsPublic)
                                </th>
                                <th class="indexhead">
                                    @Html.DisplayNameFor(model => model.IsFeatured)
                                </th>
                                <th class="indexhead">
                                    @Html.DisplayNameFor(model => model.DateOfRound)
                                </th>
                                <th class="indexhead"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="index">
                                        @Html.DisplayFor(modelItem => item.CourseName)
                                    </td>
                                    <td class="index">
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td class="index">
                                        @Html.DisplayFor(modelItem => item.Score)
                                    </td>
                                    <td class="index">
                                        @Html.DisplayFor(modelItem => item.IsPublic)
                                    </td>
                                    <td class="index">
                                        @Html.DisplayFor(modelItem => item.IsFeatured)
                                    </td>
                                    <td class="index">
                                        @Html.DisplayFor(modelItem => item.DateOfRound)
                                    </td>

                                    <td>
                                        <a href="@Url.Action("Details", "Round", new { id = item.RoundId})"
                                           class="btn btn-block btn-warning">
                                            Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

