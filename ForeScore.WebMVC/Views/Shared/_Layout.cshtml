<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ForeScore</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div id="navigation-full">
        <div class="container">
            <div id="navigation-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ForeScore", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("My Profile", "Index", "UserCareer", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Rounds", "Index", "Round", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Courses", "Index", "Course", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Tee Times", "Index", "TeeTime", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Social", "Index", "Follow", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Feed", "Index", "Post", new { area = "" }, new { @class = "navbar-brand" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ForeScore</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
