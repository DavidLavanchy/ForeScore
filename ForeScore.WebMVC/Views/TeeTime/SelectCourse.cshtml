@model IEnumerable<ForeScore.Models.CourseModels.CourseListItem>

@{
    ViewBag.Title = "SelectCourse";
}

<div class="container">
    <h2>Select A Course For Your Tee Time</h2>
    <br />
    <div class="row">
        <div class="col-lg-12">
            <a href="/TeeTime/Index" class="btn btn-info btn-block">
                Tee Time Index
            </a>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">Courses</div>
                <div class="panel-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.Slope)
                                </th>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.Rating)
                                </th>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.Par)
                                </th>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.City)
                                </th>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.StateOfResidence)
                                </th>
                                <th scope="row"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Slope)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rating)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Par)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.City)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StateOfResidence)
                                    </td>

                                    <td>
                                        <a href="@Url.Action("Create", "TeeTime", new { id = item.CourseId})"
                                           class="btn btn-block btn-success">
                                            Select This Course
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
