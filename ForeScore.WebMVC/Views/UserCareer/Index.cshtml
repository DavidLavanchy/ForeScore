@model ForeScore.Models.UserCareerModels.UserCareerViewModel

@{
    ViewBag.Title = "Index";
}

<div class="container">

    <h2>@String.Format("{0}'s Profile", Model.FullName)</h2>
    <br />

    <div class="row">

        <div class="panel panel-primary">
            <div class="panel-heading">@String.Format("{0}'s Career Statistics", Model.FullName)</div>
            <div class="panel-body panel-primary form-horizontal">
                <div class="col-lg-6 form-horizontal">
                    <dl class="dl-horizontal">

                        <dt>
                            @Html.DisplayNameFor(model => model.Handicap):
                        </dt>

                        <dd>
                            @if (Model.Handicap == 0)
                            {
                                @String.Format("Not enough rounds logged for eligible handicap.")
                            }
                            else
                            {@Html.DisplayFor(model => model.Handicap)}

                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.RoundsPlayed):
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.RoundsPlayed)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.FairwaysHit):
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FairwaysHit)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Penalties):
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Penalties)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.AveragePutts):
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.AveragePutts)
                        </dd>

                    </dl>
                </div>
                <div class="col-lg-6">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Aces):
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Aces)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Eagles):
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Eagles)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Birdies):
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Birdies)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Pars):
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Pars)
                        </dd>

                        <dt>
                            Average Driving Distance (Yards):
                        </dt>

                        <dd>
                            <p></p>
                            @Html.DisplayFor(model => model.AverageDrivingDistance)
                        </dd>
                    </dl>


                </div>
            </div>
        </div>

    </div>
    <br />
    <div class="row">

        <div class="col-lg-4">
            <div class="panel panel-primary">
                <div class="panel-heading">Featured Rounds</div>
                <div class="panel-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th class="indexhead">Course Name</th>
                                <th class="indexhead">Score</th>
                                <th class="indexhead">Date of Round</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.RoundDetails)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => item.CourseName)</td>
                                    <td>@Html.DisplayFor(model => item.Score)</td>
                                    <td>@Html.DisplayFor(model => item.DateOfRound)</td>
                                    <td>
                                        <a href="@Url.Action("Details", "Round", new { id = item.RoundId})"
                                           class="btn btn-block btn-warning">
                                            Details
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="panel panel-primary">
                <div class="panel-heading">Recent Posts</div>
                <div class="panel-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th class="indexhead">Title</th>
                                <th class="indexhead">Content</th>
                                <th class="indexhead"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PostDetails)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => item.Title)</td>
                                    <td>@Html.DisplayFor(model => item.Content)</td>
                                    <td>
                                        <a href="@Url.Action("Details", "Post", new { id = item.PostId})"
                                           class="btn btn-block btn-warning">
                                            Details
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="panel panel-primary">
                <div class="panel-heading">Recent Followings</div>
                <div class="panel-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th class="indexhead">Name</th>
                                <th class="indexhead">Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Following)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => item.FullName)</td>
                                    <td>@Html.DisplayFor(model => item.Email)</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>

    </div>
</div>








